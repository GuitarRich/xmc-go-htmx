package components

import (
	"github.com/guitarrich/headless-go-htmx/model"
	"github.com/guitarrich/headless-go-htmx/sitecore/render"
)

func Image(component model.PlaceholderComponent) templ.Component {
	return defaultImageVariant(component)
}

templ defaultImageVariant(component model.PlaceholderComponent) {
	<div class={ render.DecorateComponent("image", component) }>
		@render.ImageField(component.Fields, "Image")
	</div>
}
